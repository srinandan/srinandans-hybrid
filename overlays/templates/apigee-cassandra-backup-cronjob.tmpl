apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: apigee-cassandra-backup
spec:
  schedule: 0 2 * * *
  jobTemplate:
    spec:
      template:
        spec:
          imagePullSecrets:
          - name: gcrsecret
          serviceAccountName: apigee-cassandra-backup
          containers:
          - name: apigee-cassandra-backup
            command:
            - /bin/bash
            - -c
            - /usr/bin/BackupDBMaster.sh
            image: ${HUB}:${TAG}
            imagePullPolicy: IfNotPresent
            env:
            - name: CASSANDRA_CLUSTER_NAME
              value: apigeecluster
            - name: CASSANDRA_DC
              value: dc-1
            - name: APIGEE_CLOUDPROVIDER
              value: GCP
#           - name: http_proxy
#             value: http://myproxy.example.com:8080
            - name: DBSTORAGE_BUCKET
              value: gs://${GCS_BUCKET}
            - name: CASSANDRA_DB_USER
              valueFrom:
                secretKeyRef:
                  name: apigee-datastore-default-creds
                  key: admin.user
            - name: CASSANDRA_DB_PASS
              valueFrom:
                secretKeyRef:
                  name: apigee-datastore-default-creds
                  key: admin.password
            - name: APIGEE_JMX_USER
              valueFrom:
                secretKeyRef:
                  name: apigee-datastore-default-creds
                  key: jmx.user
            - name: APIGEE_JMX_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: apigee-datastore-default-creds
                  key: jmx.password
            volumeMounts:
            - name: apigee-cassandra-backup
              mountPath: /var/secrets/google
            - name: tls-volume
              readOnly: true
              mountPath: /opt/apigee/ssl
          volumes:
          - name: apigee-cassandra-backup
            secret:
              defaultMode: 420
              items:
              - key: dbbackup_key.json
                path: dbbackup_key.json
              secretName: apigee-cassandra-backup-svc-account
              optional: true
          - name: apigee-cassandra-backup-key-file
            secret:
              defaultMode: 256
              secretName: apigee-cassandra-backup-key-file
              optional: true
          - name: tls-volume
            secret:
              secretName: apigee-cassandra-backup-tls
          restartPolicy: OnFailure
